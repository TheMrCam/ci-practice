{
  "categories": [
    {
      "title": "## ⚙️ Breaking",
      "labels": ["breaking"]
    },
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bugfix"]
    },
    {
      "title": "## 📜 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🛠️ Infrastructure",
      "labels": ["dependencies", "maintenance", "ci"]
    },
    {
      "title": "## 💬 Uncategorized",
      "labels": []
    }
  ],
  "ignore_labels": ["ignore", "ci-ignore"],
  "template": "#{{CHANGELOG}}",
  "pr_template": "- #{{TITLE}} (##{{NUMBER}} by @#{{AUTHOR}})"
}
